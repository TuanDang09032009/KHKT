<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Radial sáng trên -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="600"
                android:centerX="0.5"
                android:centerY="0.2"
                android:startColor="#D1A3FF"
                android:endColor="#6A0DAD"
                android:useLevel="false" />
        </shape>
    </item>

    <!-- Gradient dọc từ tím đậm xuống đen -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="#6A0DAD"
                android:endColor="#000000" />
        </shape>
    </item>
</layer-list>
